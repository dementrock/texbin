!!!
%html
  %head
    %title TexBin
    %script{:type => "text/x-mathjax-config"}
      MathJax.Hub.Config({
      extensions: ["tex2jax.js"],
      jax: ["input/TeX", "output/HTML-CSS"],
      tex2jax: {
      inlineMath: [ ['$','$'] ],
      displayMath: [],
      processEscapes: true,
      },
      "HTML-CSS": { availableFonts: ["TeX"] }
      });
    = javascript_include_tag "https://d3eoax9i5htok0.cloudfront.net/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"
    = javascript_include_tag "gist_simple"
    = stylesheet_link_tag "application"
    //= javascript_include_tag "application"
    = stylesheet_link_tag "gist_simple"
    = csrf_meta_tags
  %body
    - if @isnil
      %center Does not exist.
    - else
      .content
        .content-wrapper
          .show-content.render-texmd
            = raw(process(@gist.content))
