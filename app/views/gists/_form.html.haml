= form_for(@gist) do |f|
  - if @gist.errors.any?
    #error_explanation
      %h2
        ==#{pluralize(@gist.errors.count, "error")} prohibited this gist from being saved:
      %ul
        - @gist.errors.full_messages.each do |msg|
          %li= msg
  .field.content
    = f.text_area :content
  .field.preview
    .preview-content.render-texmd
  .actions
    = f.submit
