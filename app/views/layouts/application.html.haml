!!!
%html
  %head
    %title TexBin
    %script{:type => "text/x-mathjax-config"}
      MathJax.Hub.Config({
      extensions: ["tex2jax.js"],
      jax: ["input/TeX", "output/HTML-CSS"],
      tex2jax: {
      inlineMath: [ ['$','$'] ],
      displayMath: [],
      processEscapes: true,
      },
      "HTML-CSS": { availableFonts: ["TeX"] }
      });
    = javascript_include_tag "https://d3eoax9i5htok0.cloudfront.net/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"
    //= javascript_include_tag "https://raw.github.com/coreyti/showdown/master/src/showdown.js"
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = javascript_include_tag "jquery.clippy"
    //= javascript_include_tag "http://www.steamdev.com/zclip/js/jquery.zclip.min.js"
    = csrf_meta_tags
    %script{:type => "text/javascript"}
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28298811-1']);
      _gaq.push(['_trackPageview']);
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .header
      .title
        %a(href='/')><
          %span.title-left><
            TexB
          %span.title-right><
            in
      .links
        = link_to "help", GIST_CONFIG['help_url']
        = link_to "github", 'https://github.com/dementrock/texbin'
    = yield
